<%= turbo_frame_tag goal do %>
<div class="row py-2 border-top">
  <div class="col-3 my-auto">
    <h3><%= goal.book.title %></h3>
  </div>
  <div class="col-1 my-auto">
    <p>開始日: <%= goal.start_date %></p>
  </div>
  <div class="col-2 my-auto">
    <p>目標日: <%= goal.target_date %></p>
  </div>
  <div class="col-1 my-auto">
    <p>目標ペース（ページ/日）: <%= goal.pages_per_day %></p>
  </div>
  <div class="col-2 my-auto">
    <p>現在のページ: <%= goal.reading_pages%></p>
  </div>
  <div class="col-1 my-auto">
    <p>進捗: <%=  goal.status %></p>
  </div>

 <div class="col-1">
    <div class="d-flex justify-content-end">
      <%= link_to "編集", edit_goal_path(goal), class: "btn btn-sm btn-outline-primary me-2", data: { turbo_frame: "modal" } %>
      <%= link_to "削除", goal, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
    </div>
  </div>
</div>
<% end %>
