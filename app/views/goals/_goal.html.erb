<%= turbo_frame_tag goal do %>
  <div class="row py-2 border-top">
    <div class="col-2 my-auto">
      <%= goal.book.title %>
    </div>
    <div class="col-2">
      <%= goal.start_date %>
    </div>
    <div class="col-2">
      <%= goal.target_date %>
    </div>
    <div class="col-1">
      <%= goal.pages_per_day %>
    </div>
    <div class="col-1">
      <%= goal.reading_pages %>
    </div>
    <div class="col-1">
      <%= goal.status %>
    </div>
    <div class="col-1">
      <%= ((goal.reading_pages.to_f / goal.book.pages)*100).floor %>%<br><%= goal.reading_pages %> / <%= goal.book.pages %>
    </div>
    <div class="col-2">
      <div class="d-flex justify-content-end">
        <%= link_to "編集", edit_goal_path(goal), class: "btn btn-sm btn-outline-primary me-2" %>
        <%= link_to "削除", goal, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %> 
      </div>
    </div>
  </div>
<% end %>