<%= turbo_frame_tag book do %>
  <div class="row py-2 border-top">
    <div class="col-3 my-auto">
      <%= book.title %>
    </div>
    <div class="col-3 my-auto">
      <%= book.author %>
    </div>
    <div class="col-2 my-auto">
      <%= book.pages %>
    </div>
    <div class="col-2 my-auto">
      <%= book.status_i18n %>
    </div>
    <div class="col-2">
      <div class="d-flex justify-content-end">
        <%= link_to t('defaults.edit'), edit_book_path(book), class: "btn btn-sm btn-outline-primary me-2" %>
        <%= link_to t('defaults.delete'), book, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } %>
      </div>
    </div>
  </div>
<% end %>