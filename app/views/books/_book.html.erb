<%= turbo_frame_tag book do %>
  <div class="row py-2 border-top justify-content-center">
    <div class="col-2 my-auto">
      <%= book.title %>
    </div>
    <div class="col-2 my-auto">
      <%= book.author %>
    </div>
    <div class="col-2 my-auto">
      <%= book.pages %>
    </div>
    <div class="col-2 my-auto">
      <%= book.status_i18n %>
    </div>
    <div class="col-2">
      <div class="d-flex justify-content-end">
        <%= link_to "編集", edit_book_path(book), class: "btn btn-sm btn-outline-primary me-2" %>
        <%= link_to "削除", book, class: "btn btn-sm btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
      </div>
    </div>
  </div>
<% end %>